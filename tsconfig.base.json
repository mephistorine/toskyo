{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "auth/domain": ["libs/auth/domain/src/index.ts"],
      "shared/util-common": ["libs/shared/util-common/src/index.ts"],
      "task/domain": ["libs/task/domain/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
